<!--Here is the HTML code of a calculator:-->



<!DOCTYPE html>
<html>
<head>
  <title>Calculator</title>
  <style>
    .container {
      max-width: 300px;
      margin: 0 auto;
      padding: 20px;
      background: #f4f4f4;
      border-radius: 5px;
    }

    .btn {
      width: 60px;
      height: 60px;
      font-size: 20px;
      margin: 5px;
      cursor: pointer;
    }

    .result {
      height: 60px;
      font-size: 24px;
      text-align: right;
      padding: 5px;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="result" id="result"></div>
    <table>
      <tr>
        <td><button class="btn" onclick="appendToResult(7)">7</button></td>
        <td><button class="btn" onclick="appendToResult(8)">8</button></td>
        <td><button class="btn" onclick="appendToResult(9)">9</button></td>
        <td><button class="btn" onclick="appendToResult('/')">/</button></td>
      </tr>
      <tr>
        <td><button class="btn" onclick="appendToResult(4)">4</button></td>
        <td><button class="btn" onclick="appendToResult(5)">5</button></td>
        <td><button class="btn" onclick="appendToResult(6)">6</button></td>
        <td><button class="btn" onclick="appendToResult('*')">x</button></td>
      </tr>
      <tr>
        <td><button class="btn" onclick="appendToResult(1)">1</button></td>
        <td><button class="btn" onclick="appendToResult(2)">2</button></td>
        <td><button class="btn" onclick="appendToResult(3)">3</button></td>
        <td><button class="btn" onclick="appendToResult('-')">-</button></td>
      </tr>
      <tr>
        <td><button class="btn" onclick="appendToResult(0)">0</button></td>
        <td><button class="btn" onclick="appendToResult('.')">.</button></td>
        <td><button class="btn" onclick="calculateResult()">=</button></td>
        <td><button class="btn" onclick="appendToResult('+')">+</button></td>
      </tr>
    </table>
    <button class="btn" onclick="clearResult()">Clear</button>
  </div>

  <script>
    function appendToResult(value) {
      document.getElementById('result').innerHTML += value;
    }

    function calculateResult() {
      let result = document.getElementById('result').innerHTML;
      let finalResult = eval(result);
      document.getElementById('result').innerHTML = finalResult;
    }

    function clearResult() {
      document.getElementById('result').innerHTML = '';
    }
  </script>
</body>
</html>
